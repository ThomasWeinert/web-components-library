/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "lib": ["es5", "es6", "dom"],
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "../build/temporary",
    "jsx": "react"
  },
  "include": [
    "../src/widgets.ts"
  ]
